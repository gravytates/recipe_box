<div class="row">
  <div class="col-md-6">
    <h3><%= @recipe.title %></h3>

    <p>
      <strong>Rating:</strong> <%= @recipe.rating %> / 5
    </p>

    <p>
      <strong>Instructions:</strong> <%= @recipe.instructions %>
    </p>

    <p>
    <strong>Ingredient(s):</strong>
     <% @recipe.ingredients.each do |ingredient| %>
       <li> <%= ingredient.item %> </li>
     <%end%>
    </p>

    <form action="/add_ingredients/<%= @recipe.id %>" method="post">
      <label for="tag">Add another ingredient!</label>
      <input type="text" class="form-control" name="item">
      <button type="submit" class="btn btn-info">Add Ingredient</button>
    </form>

    <form action="/add_tags/<%= @recipe.id %>" method="post">
      <label for="tag">Create a tag for this recipe!</label>
      <input type="text" class="form-control" name="tag">
      <button type="submit" class="btn btn-success">Add Tag</button>
    </form>
    <h3>Tags:</h3>
    <p>
     <% @recipe.tags.each do |tag| %>
       <li><a href="/tags/<%= tag.id %>"> <%= tag.name %></a> </li>
     <%end%>
    </p>


    <a href="/">Home</a>
  </div>
  <div class="col-md-6">
    <br>
    <form class="" action="/delete/recipe/<%= @recipe.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <button class="btn btn-danger" href="/">delete recipe</button>
    </form>
    <br>
    <form class="" action="/update/recipe/<%= @recipe.id %>">
      <button class="btn btn-success">edit recipe</button>
    </form>
  </div>
</div>
